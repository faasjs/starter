{
  "name": "@faasjs-starter/api",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "faas server -p 3001",
    "test": "jest --forceExit",
    "ci": "jest --forceExit --coverage --ci"
  },
  "dependencies": {
    "@faasjs/knex": "*",
    "faasjs": "*",
    "@faasjs/tencentcloud": "*",
    "pg": "*",
    "uuid": "*",
    "@faasjs-starter/types": "file:../types"
  },
  "jest": {
    "verbose": false,
    "transform": {
      ".(jsx|tsx?)": "@swc/jest"
    },
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "testRegex": "/*\\.test\\.ts$",
    "modulePathIgnorePatterns": [
      "/tmp/"
    ],
    "moduleNameMapper": {
      "^libs(.*)$": "<rootDir>/libs$1"
    },
    "setupFilesAfterEnv": [
      "@faasjs/jest/jest.setup.js",
      "./libs/jest.setup.ts"
    ]
  }
}
